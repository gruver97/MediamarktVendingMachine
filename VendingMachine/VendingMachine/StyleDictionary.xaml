<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:VendingMachine.Controls">

    <Style x:Key="ClientPurseStyle" TargetType="controls:TemplatedPurse">
        <Setter Property="Background" Value="#939FAB" />
        <Setter Property="Foreground" Value="#C9CFD5" />
        <Setter Property="IsButtonsEnabled" Value="True"></Setter>
    </Style>

    <Style x:Key="MachinePurseStyle" TargetType="controls:TemplatedPurse">
        <Setter Property="Foreground" Value="#5B6B7A" />
        <Setter Property="IsButtonsEnabled" Value="False"></Setter>
    </Style>
</ResourceDictionary>