<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VendingMachine"
    xmlns:controls="using:VendingMachine.Controls">

    <Style TargetType="controls:TemplatedPurse">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:TemplatedPurse">
                    <ListView ItemsSource="{TemplateBinding CoinGroups}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=TotalGroup}" Foreground="{TemplateBinding Foreground}"></TextBlock>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
